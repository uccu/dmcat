                            .logo-element A+

                        %li
                            %a.J_menuItem(href="home/index")
                                %i.fa.fa-home
                                %span.nav-label 主页
                        - for k,t in menu
                            %li
                                %a.J_menuItem(href="#{t.href}" data-index="#{t.id}")
